<div class = "row">
  <div class="col-9 mx-auto p-5">
    <div class = "card mb-5 p-5 b-rad"> <h1><b>BOOK YOUR NEXT ADVENTURE WITH US</b></h1> </div>

    <%# POST /cars %> <%# GO TO => /cars?location=losangeles&model=bmw&commit=Search %>
    <%## Form for pg search %>
    <%= form_tag cars_path, method: :get do %>
      <div class="d-flex"> <%# Make search boxes & submit btn inline %>
        <%# search by location %>
        <%= text_field_tag :location,
          params[:location],
          class: "form-control",
          placeholder: "Enter Location" %>
        <%# search by model %>
        <%= text_field_tag :model,
          params[:model],
          class: "form-control",
          placeholder: "Enter model" %>

        <%= submit_tag "Search", class: "btn btn-warning" %>
      </div>
    <% end %>
  </div>
</div>
