<%= simple_form_for [car, booking], method: :post, url: bookings_path do |f| %>
  <%= f.input :start_date, as: :string, id: :start_date, required: false, input_html: { class: "datepicker", "data-unavailable-dates": car.unavailable_dates.to_json } %>
  <%= f.input :end_date, as: :string, id: :end_date, required: false, input_html: { class: "datepicker" } %> <%# ID="booking_end_date" %>
  <%= f.input :car_id, as: "hidden", input_html: { value: car.id } %>
  <%= f.input :user_id, as: "hidden", input_html: { value: current_user.id } %>

  <%#= CAN INSERT HTML INSIDE SIMPLE FORM !!!!! %>
  <button class="btn btn-info mb-3" id="select_btn"> Select </button>
  <div id="book_now"></div> <%# ID for booking.js %>

  <%= f.submit 'Instant book', class: "btn btn-lg btn-primary"  %>
<% end %>
